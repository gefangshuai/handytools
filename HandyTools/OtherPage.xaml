<Page
    x:Class="HandyTools.OtherPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HandyTools"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid x:Name="LayoutRoot">

        <Grid.ChildrenTransitions>
            <TransitionCollection>
                <EntranceThemeTransition/>
            </TransitionCollection>
        </Grid.ChildrenTransitions>

        <ListView Name="OtherListView" SelectionChanged="OtherListView_OnSelectionChanged">
            <ListViewItem>
                <StackPanel Style="{StaticResource ListViewStyle}">
                    <TextBlock FontSize="36">IP区域查询</TextBlock>
                    <TextBlock Style="{StaticResource ListViewItemSubheaderTextBlockStyle}">搜索IP地址的地理位置</TextBlock>
                </StackPanel>
            </ListViewItem>
        </ListView>
        
    </Grid>
</Page>
